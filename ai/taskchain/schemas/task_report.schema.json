{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TaskReport frontmatter",
  "type": "object",
  "required": [
    "id",
    "type",
    "generated_at",
    "language_exceptions",
    "language",
    "task_status"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^T[0-9]{4}$"
    },
    "type": {
      "type": "string",
      "enum": [
        "task_report"
      ]
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "task_status": {
      "type": "string",
      "enum": [
        "blocked",
        "done_pending_review",
        "done",
        "invalid"
      ]
    },
    "language": {
      "type": "string",
      "enum": [
        "en"
      ]
    },
    "language_exceptions": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "jp_required_in_output",
          "jp_sample_data",
          "jp_docs_only"
        ]
      },
      "default": []
    }
  },
  "additionalProperties": true
}
