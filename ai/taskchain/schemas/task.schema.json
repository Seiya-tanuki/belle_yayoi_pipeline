{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TaskSpec frontmatter",
  "type": "object",
  "required": [
    "id",
    "title",
    "created_at",
    "depends_on",
    "status_policy",
    "authority",
    "scope",
    "acceptance",
    "reporting"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^T[0-9]{4}$"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "depends_on": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^T[0-9]{4}$"
      }
    },
    "auto_advance_allowed": {
      "type": "boolean"
    },
    "status_policy": {
      "type": "object",
      "required": [
        "codex_max_status"
      ],
      "properties": {
        "codex_max_status": {
          "type": "string",
          "enum": [
            "done_pending_review",
            "done"
          ]
        }
      },
      "additionalProperties": false
    },
    "authority": {
      "type": "object",
      "required": [
        "sources"
      ],
      "properties": {
        "sources": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "plan_path": {
          "type": "string"
        },
        "pack_ref": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "scope": {
      "type": "object",
      "required": [
        "allow_paths",
        "deny_paths"
      ],
      "properties": {
        "allow_paths": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "deny_paths": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "acceptance": {
      "type": "object",
      "required": [
        "machine",
        "human"
      ],
      "properties": {
        "machine": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "run"
            ],
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "run": {
                "type": "string",
                "minLength": 1
              }
            },
            "additionalProperties": false
          }
        },
        "human": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "reporting": {
      "type": "object",
      "properties": {
        "extra_requests": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "required_sections": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "risk_level": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ]
    },
    "destructive_ops": {
      "type": "boolean"
    },
    "next": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "extensions": {
      "type": "object"
    }
  },
  "additionalProperties": false
}