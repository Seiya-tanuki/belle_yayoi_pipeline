{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TaskState",
  "type": "object",
  "required": [
    "id",
    "status",
    "timestamps"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^T[0-9]{4}$"
    },
    "status": {
      "type": "string",
      "enum": [
        "ready",
        "in_progress",
        "blocked",
        "done_pending_review",
        "done",
        "cancelled",
        "invalid"
      ]
    },
    "timestamps": {
      "type": "object",
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "started_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "finished_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "approved_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        }
      },
      "required": [
        "created_at"
      ],
      "additionalProperties": false
    },
    "runner": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "lease": {
      "type": "object",
      "properties": {
        "owner": {
          "type": "string"
        },
        "expires_at": {
          "type": "string",
          "format": "date-time"
        },
        "rev": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": [
        "owner",
        "expires_at",
        "rev"
      ],
      "additionalProperties": false
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": false
}